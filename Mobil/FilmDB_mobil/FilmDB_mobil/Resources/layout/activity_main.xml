
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff36393f"
    android:id="@+id/mainLayout">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/appBarLayout1" >

    </android.support.design.widget.AppBarLayout>

    <include
        layout="@layout/content_main"
        android:layout_marginRight="0.0dp"
        android:layout_width="wrap_content"
        android:id="@+id/include1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:longClickable="true" />
    <Button
        android:text="Vorschlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_suggest"
        android:layout_marginBottom="0.0dp"
        android:translationY="10.0dp"
        android:translationX="7.0dp"
        android:paddingEnd="20.0dp"
        android:paddingLeft="20.0dp"
        android:background="#ff36393f"
        android:textColor="#ffe0e0e0" />
    <Button
        android:text="Filtern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Filter"
        android:layout_marginBottom="0.0dp"
        android:translationY="10.0dp"
        android:translationX="200.0dp"
        android:paddingEnd="45.0dp"
        android:paddingLeft="45.0dp"
        android:background="#ff36393f"
        android:textColor="#ffe0e0e0" />
    <CheckBox
        android:text="Film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxMovie"
        android:layout_marginBottom="0.0dp"
        android:translationY="55.0dp"
        android:textColor="#ffe0e0e0" />
    <CheckBox
        android:text="Serie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxSeries"
        android:layout_marginBottom="0.0dp"
        android:translationY="55.0dp"
        android:translationX="70.0dp"
        android:textColor="#ffe0e0e0" />
    <CheckBox
        android:text="Anime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxAnime"
        android:layout_marginBottom="0.0dp"
        android:translationY="55.0dp"
        android:translationX="150.0dp"
        android:textColor="#ffe0e0e0" />
    <CheckBox
        android:text="Wunschliste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbxWishlist"
        android:layout_marginBottom="0.0dp"
        android:translationY="95.0dp"
        android:textColor="#ffe0e0e0" />
    <GridView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grvContent"
        android:translationY="130.0dp"
        android:columnWidth="90dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="0dp"
        android:layout_margin="20dp"
        android:stretchMode="columnWidth"/>

    <Button
        android:text="suchen"
        android:layout_width="80.0dp"
        android:layout_height="20.0dp"
        android:translationY="102.0dp"
        android:translationX="285.0dp"
        android:background="#ff36393f"
        android:textColor="#ffe0e0e0" 
        android:id="@+id/btnSearch" />
    <EditText

        android:layout_width="170.0dp"
        android:layout_height="wrap_content"
        android:translationY="103.0dp"
        android:translationX="115.0dp"
        android:id="@+id/tbxSearch"
        android:background="#ff323238"
        android:textColor="#ffe0e0e0"/>
</android.support.design.widget.CoordinatorLayout>